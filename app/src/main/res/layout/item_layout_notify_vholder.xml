<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/spacing_18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectange_c4_068dff"
    android:layout_marginStart="@dimen/spacing_24dp"
    android:layout_marginEnd="@dimen/spacing_24dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/spacing_16dp"
        app:srcCompat="@drawable/ic_bell_yellow"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ivNotify"
        app:layout_constraintBottom_toBottomOf="@id/tvNotify"
        app:layout_constraintTop_toTopOf="@id/tvNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/semi_regular"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_16sp"
        android:padding="@dimen/spacing_12dp"
        android:id="@+id/tvNotify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivLocation"
        app:layout_constraintStart_toEndOf="@id/ivNotify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginEnd="@dimen/spacing_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvNotify"
        app:layout_constraintTop_toTopOf="@id/tvNotify"
        app:srcCompat="@drawable/ic_location_red"
        android:id="@+id/ivLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>