<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectange_c4_0c0c0c"
    android:padding="@dimen/spacing_24dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semi_regular"
        android:gravity="center"
        android:text="@string/text_which_one_you_want_to_choose"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:stateListAnimator="@animator/anim_click_scale_zoom_out"
        android:layout_marginTop="@dimen/spacing_30dp"
        android:id="@+id/ivCamera"
        android:layout_width="@dimen/spacing_89dp"
        android:layout_height="@dimen/spacing_68dp"
        app:layout_constraintEnd_toStartOf="@id/ivVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:srcCompat="@drawable/ic_camera" />


    <androidx.appcompat.widget.AppCompatImageView
        android:stateListAnimator="@animator/anim_click_scale_zoom_out"
        android:layout_marginTop="@dimen/spacing_30dp"
        android:id="@+id/ivVideo"
        android:layout_width="@dimen/spacing_89dp"
        android:layout_height="@dimen/spacing_68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCamera"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:srcCompat="@drawable/ic_video" />

</androidx.constraintlayout.widget.ConstraintLayout>